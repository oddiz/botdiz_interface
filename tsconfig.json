{
    "compilerOptions": {
        "target": "es6",
        "lib": [
        "dom",
        "dom.iterable",
        "esnext"
        ],
        "baseUrl": "src",
        "paths": {
            "@src":["src/*"],
        },
        
        "types": ["@types/spotify-api", "node"],
        "composite": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "downlevelIteration": true,
        "noEmit": true,
        "jsx": "react-jsx"
    },
    "include": [
        "src",
        "src/custom.d.ts"
    ],
    
}
